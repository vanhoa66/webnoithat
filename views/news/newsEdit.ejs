<% include ../header %>
    <div class="container">
        <form action="/news/<%= news._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="formGroupExampleInput">Tên sản phẩm: </label>
                <input type="text" class="form-control" name="name" value="<%= news.name %>" id="formGroupExampleInput" placeholder="Tên sản phẩm">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Hình ảnh: </label>
                <input type="text" class="form-control" name="image" value="<%= news.image %>" id="formGroupExampleInput2" placeholder="Hình ảnh">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Mô tả chi tiết: </label>
                <textarea class="form-control" name="editor1" id="editor1" rows="10" cols="80"><%- news.description %>"</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>

    </div>
    <% include ../footer %>