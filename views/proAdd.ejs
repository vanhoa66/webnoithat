<% include header%>
    <section>
        <div class="container">
            <div class="row">
                <div class="container">
                    <h2>Thêm sản phẩm mới</h2>
                    <form action="/proAdd" method="POST">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Danh mục: </label>
                            <select name="menu">
                                <% menus.forEach(function(menu){ %>
                                    <option value="<%=menu._id %>">
                                        <%=menu.name %>
                                    </option>
                                    <% })  %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput">Tên sản phẩm: </label>
                            <input type="text" class="form-control" name="name" id="formGroupExampleInput" placeholder="Tên sản phẩm">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Giá: </label>
                            <input type="number" class="form-control" name="price" id="formGroupExampleInput2" placeholder="Giá">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Hình ảnh: </label>
                            <input type="text" class="form-control" name="image" id="formGroupExampleInput2" placeholder="Hình ảnh">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Mô tả chi tiết: </label>
                            <textarea class="form-control" name="editor1" id="editor1" rows="10" cols="80"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script>
        CKEDITOR.replace('editor1');
      </script>
    <% include footer%>