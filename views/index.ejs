<% include header%>
    <section>
        <div class="container">
            <div class="row">
                <section id="slider">
                    <!--slider-->
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <div class="col-sm-6">
                                                <h1>
                                                    <span>GSC</span>-VIET NAM</h1>
                                                <h2>A40-TT1 - Văn Quán - Hà Đông - Hà Nội</h2>
                                                <p>Tel:+84-24 62.811.855(Ext: 201; 202) </p>
                                                <button type="button" class="btn btn-default get">Call Now</button>
                                            </div>
                                            <div class="col-sm-6">
                                                <img src="/static/images/slide1.jpg" class="girl img-responsive" alt="" />
                                            </div>
                                        </div>
                                        <div class="item">
                                            <div class="col-sm-6">
                                                <h1>
                                                    <span>GSC</span>-VIET NAM</h1>
                                                <h2>A40-TT1 - Văn Quán - Hà Đông - Hà Nội</h2>
                                                <p>Tel:+84-24 62.811.855(Ext: 201; 202) </p>
                                                <button type="button" class="btn btn-default get">Call Now</button>
                                            </div>
                                            <div class="col-sm-6">
                                                <img src="/static/images/slide1.jpg" class="girl img-responsive" alt="" />
                                            </div>
                                        </div>
                                    </div>
                                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                                        <i class="fa fa-angle-left"></i>
                                    </a>
                                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
                <!--/slider-->
                <div class="col-sm-12">
                    <% menus.forEach(function(menu){ %>
                        <div class="features_items">
                            <!--features_items-->
                            <a href="/menu/<%= menu.slugMenu %>">
                                <h2 class="title text-center">
                                    <%= menu.name %>
                                </h2>
                            </a>
                            <% products.forEach(function(product){ %>
                                <% if(menu._id.equals(product.menu.id)){ %>
                                    <div class="col-sm-3">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">
                                                    <img src="<%=product.image %>" alt="" />
                                                    <h2>
                                                        Giá:
                                                        <%= product.price %> VNĐ
                                                    </h2>
                                                    <p>
                                                        <%= product.name %>
                                                    </p>
                                                    <a href="product/<%= product.slugPro %>" class="btn btn-default add-to-cart">
                                                        <i class="fa fa-shopping-cart"></i>Xem thêm</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }})  %>
                        </div>
                        <!--features_items-->
                        <% })  %>
                </div>
            </div>
        </div>
    </section>
    <% include footer%>