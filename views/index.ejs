                <a href="/menu/<%= menu.slugMenu %>">
                    <h2 class="title text-center">
                        <%= menu.name %>
                    </h2>
                </a>
                <% products.forEach(function(product){ %>
                    <% if(menu._id.equals(product.menu.id)){ %>
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="<%=product.image %>" alt="" />
                                        <h2>
                                            <%= product.price %>
                                        </h2>
                                        <p>
                                            <%= product.name %>
                                        </p>
                                        <a href="product/<%= product.slugPro %>" class="btn btn-default add-to-cart">
                                            <i class="fa fa-shopping-cart"></i>Xem thÃªm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }})  %>
